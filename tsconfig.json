{
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es2019",
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "./out",
    "incremental": true,
    "lib": [
      "dom",
      "es2019"
    ],
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  }
}
