{
  "name": "lit-app",
  "version": "0.1.0",
  "description": "A template project for developing applications using Lit",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && npm run compile && rollup -c rollup.config.js",
    "compile": "tsc && symlink-dir ./assets ./out/assets",
    "git:precommit": "lint-staged",
    "prepare": "husky install",
    "start": "npm run compile && concurrently -k -r 'tsc --watch --preserveWatchOutput' 'wds'",
    "test": "echo 'Error: no test specified' && exit 1"
  },
  "keywords": [
    "web-components",
    "typescript",
    "lit",
    "lit application"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://majiangl@github.com/majiangl/lit-app.git"
  },
  "author": "majiangl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/majiangl/lit-app/issues"
  },
  "homepage": "https://github.com/majiangl/lit-app#readme",
  "dependencies": {
    "lit": "^2.2.8"
  },
  "devDependencies": {
    "@open-wc/dev-server-hmr": "^0.1.3",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "@web/dev-server": "^0.1.33",
    "@web/rollup-plugin-html": "^1.10.3",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "concurrently": "^7.3.0",
    "eslint": "^8.21.0",
    "eslint-plugin-lit": "^1.6.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.77.2",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^1.4.3",
    "rollup-plugin-terser": "^7.0.2",
    "symlink-dir": "^5.0.1",
    "typescript": "^4.7.4"
  }
}
